// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Extension",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build Webview",
			"type": "shell",
			"command": "npm run build:webview",
			"problemMatcher": []
		},
		{
			"label": "Pre-launch Setup",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Build Webview",
				"Build Extension",
			],
			"problemMatcher": []
		}
	]
}
