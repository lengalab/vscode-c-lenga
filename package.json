{
  "name": "c-lenga",
  "publisher": "lengalabs",
  "displayName": "c-lenga",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lengalabs/vscode-c-lenga.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:nodes.toml",
    "workspaceContains:*/nodes.toml"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lenga",
        "aliases": [
          "Lenga"
        ],
        "extensions": [
          ".c.lenga"
        ]
      }
    ],
    "customEditors": [
      {
        "viewType": "c-lenga",
        "displayName": "C Lenga Editor",
        "selector": [
          {
            "filenamePattern": "*.lenga"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "c-lenga.setStructuredView",
        "title": "Sets the editors view to a classic structured format",
        "category": "SetView",
        "icon": "$(code-oss)"
      },
      {
        "command": "c-lenga.setGraphView",
        "title": "Sets the editors view to a function call graph format",
        "category": "SetView",
        "icon": "$(type-hierarchy)"
      },
      {
        "command": "c-lenga.transpileFile",
        "title": "Transpile File",
        "category": "Transpilation",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "c-lenga.toggleDebug",
        "title": "Toggle Debug Info",
        "category": "c-lenga",
        "icon": "$(debug-alt)"
      }
    ],
    "keybindings": [
      {
        "command": "c-lenga.toggleDebug",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "activeCustomEditorId == c-lenga"
      },
      {
        "command": "c-lenga.setStructuredView",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "activeCustomEditorId == c-lenga"
      },
      {
        "command": "c-lenga.setGraphView",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "activeCustomEditorId == c-lenga"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "c-lenga.setStructuredView",
          "when": "activeCustomEditorId == c-lenga && c-lenga.currentView == graph",
          "group": "navigation"
        },
        {
          "command": "c-lenga.setGraphView",
          "when": "activeCustomEditorId == c-lenga && c-lenga.currentView == structured",
          "group": "navigation"
        },
        {
          "command": "c-lenga.transpileFile",
          "when": "resourceLangId == c || resourceLangId == lenga",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "c-lenga.transpileFile",
          "when": "resourceLangId == c || resourceLangId == lenga",
          "group": "navigation",
          "args": [
            "${file}"
          ]
        }
      ]
    }
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "build:protos": "protoc -I=./rpc/protos --plugin=protoc-gen-ts_proto=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=./rpc/generated --ts_proto_opt=esModuleInterop=true,useOptionals=messages,outputServices=grpc-js,env=node,oneof=unions ./rpc/protos/*.proto",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src webview-ui/src --ext .ts,.tsx --fix",
    "lint:check": "eslint src webview-ui/src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.ts\" \"webview-ui/src/**/*.{ts,tsx}\" \"*.{js,mjs,json}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"webview-ui/src/**/*.{ts,tsx}\" \"*.{js,mjs,json}\"",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish",
    "vsce": "vsce"
  },
  "devDependencies": {
    "@bufbuild/protobuf": "2.6.3",
    "@types/google-protobuf": "^3.15.12",
    "@types/lodash": "^4.17.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "grpc-tools": "^1.13.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.8.0",
    "@vscode/vsce": "^3.6.2",
    "google-protobuf": "^3.21.4",
    "lodash": "^4.17.21",
    "protobufjs": "^7.5.4",
    "ts-proto": "^2.7.7",
    "ts-protoc-gen": "^0.15.0"
  }
}
